{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "allowJs": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": false,
        "target": "ES2020",
        "strictPropertyInitialization": false,
        "baseUrl": ".",
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
